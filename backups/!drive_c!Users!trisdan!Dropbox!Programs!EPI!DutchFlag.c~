// Dutch flag (i.e. a partition of an array into three zones: less
// than pivot, greater than pivot, equal to pivot) in C.
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

void swap(int *a, int *b) {
    int temp;
    temp = *a;
    *a = *b;
    *b = temp;
}

inline size_t choose_pivot_index(size_t n) {
    return floor(abs(rand()) * n);
}

